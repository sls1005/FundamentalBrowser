<?xml version="1.0" encoding="utf-8"?>
<!-- Traditional Chinese characters are a little too information-intensive and thus need a specifically formed UI, while Simplified Chinese don't need it. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">
    <EditText
        android:id="@+id/url_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:maxHeight="200dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:inputType="text|textMultiLine"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:hint="@string/main_url_field_hint"
        android:enabled="true"
        tools:ignore="TextFields" />
    <HorizontalScrollView
        android:id="@+id/button_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="end">
            <Button
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/close"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_decode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/decode"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/clear"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_restore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/restore"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/search"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/copy"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_paste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/paste"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/main_button_go"
                android:textSize="17sp"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/button_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="@string/main_button_run"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout
        android:id="@+id/search_area"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <EditText
            android:id="@+id/content_search_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/search_previous"
            android:layout_marginLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:inputType="text"
            android:textSize="18sp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/search_previous"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/search_next"
            android:src="@drawable/arrow_up"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/search_next"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/end_search"
            android:src="@drawable/arrow_up"
            android:rotation="180.0"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/end_search"
            android:layout_width="35dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/x"
            android:visibility="gone"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/log_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            android:fontFamily="monospace"
            android:hyphenationFrequency="none"
            android:textIsSelectable="true"
            android:visibility="gone"/>
    </ScrollView>
    <WebView
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>